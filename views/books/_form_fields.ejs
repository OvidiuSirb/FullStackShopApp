<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>

<div>
    <label>Author</label>
<!-- we could do  Author.find({}).each %> but it isn't asynchronous and we don't want to render all this code inside of our view files, we want it inside of our actual server -->
    <select name="author">
        <% authors.forEach(author => { %>
            <% if (author.id === book.author) { %>
        <option label="<%= author.name %>" value="<%= author.id %>">
            <%} else {%>
        <option label="<%= author.name %>" value="<%= author.id %>">
            <% } %>
        <% }) %>
    </select>
</div>

<div>
    <label>Publish date</label>
<!-- without the time section ('T') -->
    <input type="date" name="publishDate" 
        value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Page count</label>
    <input type="number" name="pageCount" min="1"value="<%= book.pageCount %>">
</div>
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond" >
</div>
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= book.description %></textarea>
</div>